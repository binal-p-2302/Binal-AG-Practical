{{ 'section-ebooks.css' | asset_url | stylesheet_tag }}

<div class="page-width">
  <div class="ebooks--wrapper section_{{ section.id }}">
    <style>
        .section_{{ section.id }} {
            background-image: url({{ section.settings.image | img_url: '1024x1024' }});
        }
    </style>
    <div class="ebooks-content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.description }}</p>
      <div class="ebook-btn--wrapper">
        <a href="javascript:void(0);">{{ section.settings.btn_one }}</a>
        <a href="javascript:void(0);" class="bor-btn">{{ section.settings.btn_two }}</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "eBooks",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "text",
            "id": "btn_one",
            "label": "Button one"
        },
        {
            "type": "text",
            "id": "btn_two",
            "label": "Button two"
        }
    ],
    "presets": [
      {
        "name": "eBooks"
      }
    ]
  }
{% endschema %}