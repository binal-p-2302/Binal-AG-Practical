{{ 'section-health-fitness.css' | asset_url | stylesheet_tag }}

<div class="page-width">
  <div class="health-fitness--wrapper">
    <div class="article-heading" bis_skin_checked="1">
        {% if section.settings.heading != blank %}
        <p>{{ section.settings.heading }}</p>
        {% endif %}
        {% if section.settings.heading_two != blank %}
        <h2>{{ section.settings.heading_two }}</h2>
        {% endif %}
      </div>
  </div>
  <div class="health-box--wrapper">
    {% for block in section.blocks %}
        {% if block.settings.image != blank %}
        <div class="health-box">
            <img src="{{ block.settings.image | img_url:"1024x1024" }}">
            {% if block.settings.heading != blank %}
            <h4>{{ block.settings.heading }}</h4>
            {% endif %}
            {% if block.settings.description != blank %}
            {{ block.settings.description }}
            {% endif %}
        </div>
        {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Health & Fitness",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "heading_two",
            "label": "Heading two"
        }
    ],
    "blocks": [
        {
            "type": "image",
            "name":"Image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Imae"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                },
                {
                    "type": "richtext",
                    "id": "description",
                    "label": "Description"
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "Health & Fitness"
      }
    ]
  }
{% endschema %}