{{ 'section-instagram.css' | asset_url | stylesheet_tag }}

<div class="page-width">
  <div class="instagram--wrapper">
    <div class="instagram-box instagram-content">
      <div class="ig-content-box">
        <div class="ig-title">
          {% render 'icon-ig-logo' %}
          {{ section.settings.heading_one }}
        </div>
        <a href="javascript:void(0);">{{ section.settings.heading_two }}</a>
      </div>
    </div>
    {% for block in section.blocks %}
        {% if block.settings.image != blank %}
        <div class="instagram-box">
        <div class="ig-img">
            <img
            src="{{ block.settings.image | img_url:"1024x1024" }}"
            alt
            width=""
            height=""
            >
            <div class="ig-hover">
            {% render 'icon-inst' %}
            </div>
        </div>
        </div>
        {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Instagram",
  "settings": [
    {
        "type": "text",
        "id": "heading_one",
        "label": "Heading one"
    },
    {
        "type": "text",
        "id": "heading_two",
        "label": "Heading two"
    }
  ],
  "blocks": [
    {
        "type": "image",
        "name":"Image",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Instagram"
    }
  ]
}
{% endschema %}
